---
const {color, title, subtitle} = Astro.props
const textColor = `text-${color}`
---

<section 
    class="landing-section bg-black h-screen w-full text-center overflow-hidden relative"
    data-header-color={color}
>
    <div class="z-30 relative h-full flex flex-col">
        <header>
            <h2 class={`${textColor} pt-24 text-[40px] font-medium`}>
            {title}
            </h2>
            <p class={`${textColor} text-[14px]`}>{subtitle}</p>
        </header>
        <footer class="flex flex-grow flex-nowrap flex-col justify-end pb-20">
            <slot name="footer"></slot>
        </footer>
    </div>
    <div class="absolute top-0 bottom-0 h-full w-full z-10">
        <slot name="background"></slot>
    </div>
</section>